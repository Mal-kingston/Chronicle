<UserControl x:Class="Chronicle.DeleteItemControl "
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chronicle"
             mc:Ignorable="d" >
    <Grid Background="{DynamicResource DarkBrush}">
        <Label Content="{Binding Query, UpdateSourceTrigger=PropertyChanged, FallbackValue=Selected files will be permanently deleted ?}"
               Foreground="{DynamicResource GrayBrush}" 
               FontSize="{StaticResource Small}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
    </Grid>
</UserControl>
