<UserControl x:Class="Chronicle.SaveAndExitControl "
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chronicle"
             mc:Ignorable="d" >
    <Grid Background="{StaticResource DarkBrush}">
        <Label Content="{Binding Query, FallbackValue=Do you want to save this file}"
               Foreground="{StaticResource GrayBrush}"
               FontSize="{StaticResource Small}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
    </Grid>
</UserControl>
