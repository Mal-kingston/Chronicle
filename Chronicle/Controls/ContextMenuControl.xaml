<UserControl x:Class="Chronicle.ContextMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chronicle"
             mc:Ignorable="d" >

    <!--Context menu outline-->
    <Border Width="150" Padding="8" local:DropShadowAttachedProperty.Value="True"
            Background="{StaticResource DarkBrush}">
        <StackPanel Orientation="Vertical" local:ContexMenuButtonStyleAttachedProperties.Value="True">
            <Button Content="Save" />
            <Button Content="SaveAs" />
            <Button Content="Delete" />
            <Border BorderThickness="0.5" BorderBrush="{StaticResource GrayBrush}" />
            <Button Content="Print" />
            <Button Content="Share" />
            <Border BorderThickness="0.5" BorderBrush="{StaticResource GrayBrush}" />
            <Button Content="Templates" />
        </StackPanel>
    </Border>
</UserControl>
