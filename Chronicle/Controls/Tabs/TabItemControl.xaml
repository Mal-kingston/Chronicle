<UserControl x:Class="Chronicle.TabItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chronicle"
             mc:Ignorable="d"
             x:Name="TabItem"
             d:DataContext="{x:Static local:TabItemDesignModel.Instance}">

    <UserControl.Resources>
        <Style x:Key="TabItem" TargetType="{x:Type RadioButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        
                        <Grid Height="36" Width="180" Opacity="0.8" x:Name="container"
                              Background="{StaticResource DarkBrush}" >
                            <!-- Bottom bar -->
                            <Border Height="4" Width="180" x:Name="border"
                                    VerticalAlignment="Bottom" HorizontalAlignment="Left"
                                    Background="{StaticResource BlueBrush}" Opacity="0"/>

                            <!-- Title and button -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding TabHeader}" TextAlignment="Center" FontSize="{StaticResource XSmall}"
                                           Margin="10, 0, 0, 0" VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                                           TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"
                                           Foreground="{StaticResource GrayBrush}" Width="120" />
                                <Button Height="22" Width="22" Margin="20, 0, 6, 0" Content="{StaticResource CloseIcon}"/>
                                <!-- Right bar -->
                                <Border Height="36" Width="2" HorizontalAlignment="Right" Background="{StaticResource GrayBrush}" />

                            </StackPanel>

                        </Grid>

                        <ControlTemplate.Triggers>

                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Opacity" Value="1" TargetName="border" />
                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <RadioButton Style="{StaticResource TabItem}" 
                 IsChecked="{Binding Selected, ElementName=TabItem}" 
                 Command="{Binding SelectedCommand}"/>

</UserControl>
