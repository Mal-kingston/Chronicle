<local:BasePage x:TypeArguments="local:NotePageViewModel" x:Class="Chronicle.NotePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chronicle"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid Grid.Row="1" Margin="0, 15, 0, 0">
        <Grid.RowDefinitions>
            <!-- Tab -->
            <RowDefinition Height="Auto" />
            <!-- Main content area -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Tab -->
        <Canvas Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="36">
            <local:TabControl DataContext="{Binding TabControl}" VerticalAlignment="Top" HorizontalAlignment="Left" Height="36" />
        </Canvas>

        <!-- Tab content -->
        <Grid Grid.Row="1" Background="{StaticResource DarkBrush}">

            <local:TabContentControl DataContext="{Binding TabContent}" />

        </Grid>

    </Grid>
    
</local:BasePage>
