<Page x:Class="Chronicle.SharePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chronicle"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Orientation="Vertical" Margin="0 100" >
        
        <Label Content="{Binding Label}" Margin="0 50" 
               FontFamily="{StaticResource JostFont}" FontSize="{StaticResource XLarge}" Foreground="{DynamicResource GrayBrush}"
               VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <Label Content="TRY AGAIN LATER" 
               FontFamily="{StaticResource JostFont}" FontSize="{StaticResource XLarge}" Foreground="{DynamicResource GrayBrush}"
               VerticalAlignment="Center" HorizontalAlignment="Center"/>

    </StackPanel>
</Page>
